<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#DDDDDD" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/bottom_wx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                    <ImageView
                        android:id="@+id/img_wx_select"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/alo" />

                    <ImageView
                        android:id="@+id/img_wx_unselect"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#FFFFFF"
                        android:src="@drawable/alq" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_wx_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:textColor="#32CD32" />

                    <TextView
                        android:id="@+id/tv_wx_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微信"
                        android:textColor="#969696" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_fx"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                    <ImageView
                        android:id="@+id/img_fx_select"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/als" />

                    <ImageView
                        android:id="@+id/img_fx_unselect"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#FFFFFF"
                        android:src="@drawable/alu" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_fx_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发现"
                        android:textColor="#32CD32" />

                    <TextView
                        android:id="@+id/tv_fx_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发现"
                        android:textColor="#969696" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottom_w"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="35dp"
                    android:layout_height="35dp">

                    <ImageView
                        android:id="@+id/img_w_select"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/alw" />

                    <ImageView
                        android:id="@+id/img_w_unselect"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="#FFFFFF"
                        android:src="@drawable/aly" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_w_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我"
                        android:textColor="#32CD32" />

                    <TextView
                        android:id="@+id/tv_w_unselect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我"
                        android:textColor="#969696" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>
